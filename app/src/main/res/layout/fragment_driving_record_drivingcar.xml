<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/bg_slide_panel_bottom_shape"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_car_license_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="沪A453280"
            android:textColor="@color/black"
            android:textSize="@dimen/font_smaller" />
        <TextView
            android:id="@+id/tv_refund_car"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="3dp"
            android:gravity="center"
            android:background="@drawable/bg_diglog_green_stoke"
            android:textColor="@color/colorGreenPrimary"
            android:text="@string/refund_car"
            android:textSize="@dimen/font_smaller" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/backgroudcolor"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:id="@+id/rl_indentify_certification"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="01月05日12.30开始计费"
            android:textColor="@color/colorGreenPrimary"
            android:textSize="@dimen/font_smaller" />
        <ImageView
            android:id="@+id/iv_explain"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/icon_explain" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:background="@color/backgroudcolor"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_open_car_door"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/open_car_door"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="@color/backgroudcolor" />
        <TextView
            android:id="@+id/tv_take_off_lock"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/take_off_lock"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:background="@color/backgroudcolor" />
        <TextView
            android:id="@+id/tv_close_car_door"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/close_car_door"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>