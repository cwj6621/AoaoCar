<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroudcolor"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/spacing_tinyer"
    android:paddingBottom="@dimen/spacing_tinyer"
    android:layout_height="60dp">
   <ImageView
       android:id="@+id/iv_location"
       android:layout_width="wrap_content"
       android:src="@mipmap/icon_order_start_address"
       android:layout_alignParentLeft="true"
       android:layout_centerVertical="true"
       android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_search_result_distrut"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/font_small"
        android:text="200"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_search_result_name"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:textSize="@dimen/font_smaller"
        android:textColor="@color/black"
        android:text="@string/account_balance"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_toRightOf="@+id/iv_location"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_search_result_address"
        android:layout_width="wrap_content"
       android:layout_alignParentBottom="true"
        android:textSize="@dimen/font_small"
        android:textColor="@color/black"
        android:text="@string/account_balance"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_toRightOf="@+id/iv_location"
        android:layout_height="wrap_content" />
    </RelativeLayout>