<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroudcolor"
    android:orientation="vertical">

    <com.baidu.mapapi.map.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@drawable/bg_diglog_white_rediu"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.jianguo.aoaocar.view.TextStepView
            android:id="@+id/tv_step_view"
            android:layout_width="300dp"
            android:layout_height="20dp"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            app:default_color="@color/colorHint"
            app:selected_color="@color/colorOrangePrimary" />

        <com.jianguo.aoaocar.view.MagicProgressBar
            android:id="@+id/ban_numberbar"
            android:layout_width="300dp"
            android:layout_height="6dp"
            android:layout_gravity="center_horizontal"
            app:mpb_background_color="@color/backgroudcolor"
            app:mpb_fill_color="@color/colorOrangePrimary" />
        <FrameLayout
            android:id="@+id/fl_driving_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>
