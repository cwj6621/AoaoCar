<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="#20ffffff"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_close"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_alignParentBottom="true"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:layout_height="80dp">
            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="20dp"
                android:src="@mipmap/icon_close"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_height="20dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_real_pay"
            android:layout_width="match_parent"
            android:layout_above="@+id/rl_close"
            android:background="@color/white"
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="在线支付"
                android:textColor="@color/black"
                android:textSize="@dimen/font_smaller" />

            <TextView
                android:id="@+id/tv_indentify_certification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:textColor="@color/colorDeepOrangePrimary"
                android:text="21.00"
                android:textSize="@dimen/font_smaller" />

        </RelativeLayout>
        <View
            android:id="@+id/ll_view"
            android:layout_width="match_parent"
            android:background="@color/backgroudcolor"
            android:layout_above="@+id/rl_real_pay"
            android:layout_height="1dp"></View>
        <ListView
            android:id="@+id/lv_free_record"
            android:layout_width="match_parent"
            android:divider="@null"
            android:layout_above="@+id/ll_view"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:background="@color/white"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/ll_free"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_above="@+id/lv_free_record"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_free_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="￥21.0"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/spacing_tinyer"
                android:textColor="@color/colorGreenPrimary"
                android:textSize="@dimen/font_medium" />
            <TextView
                android:id="@+id/tv_free_costdesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="实付款"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/spacing_tinyer"
                android:textColor="@color/colorGreenPrimary"
                android:textSize="@dimen/font_smaller" />
        </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_desc"
                android:layout_width="match_parent"
                android:background="@drawable/bg_order_alpha_background"
                android:layout_above="@+id/ll_free"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="40dp">
                <View
                    android:layout_width="100dp"
                    android:layout_height="1dp"
                    android:background="@color/backgroudcolor"></View>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/rent_free"
                    android:layout_marginLeft="@dimen/spacing_tinyer"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_smaller" />
                <View
                    android:layout_width="100dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/spacing_tinyer"
                    android:background="@color/backgroudcolor"></View>
            </LinearLayout>
    </RelativeLayout>
</RelativeLayout>