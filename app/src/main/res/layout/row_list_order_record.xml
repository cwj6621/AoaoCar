<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_record_line"
            android:layout_width="1dp"
            android:background="@color/colorDeepOrangeAccent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_height="30dp" />
        <View
            android:id="@+id/rl_iv"
            android:layout_width="20dp"
            android:layout_below="@+id/iv_record_line"
            android:background="@mipmap/icon_order_record_state"
            android:layout_alignParentLeft="true"
            android:layout_height="20dp"  ></View>

    <TextView
        android:id="@+id/tv_record_state_name"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/spacing_tinyer"
        android:layout_toRightOf="@+id/rl_iv"
        android:layout_alignParentBottom="true"
        android:textColor="@color/colorHint"
        android:textSize="@dimen/font_smaller"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_record_state_time"
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:textColor="@color/colorHint"
        android:textSize="@dimen/font_small"
        android:layout_height="wrap_content" />
</RelativeLayout>