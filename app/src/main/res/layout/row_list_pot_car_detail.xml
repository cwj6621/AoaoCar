<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:padding="12dp"
    android:layout_height="80dp">
<ImageView
    android:id="@+id/iv_pot_car_pic"
    android:layout_width="45dp"
    android:src="@mipmap/icon_car_detail"
    android:layout_centerVertical="true"
    android:layout_alignParentLeft="true"
    android:layout_height="45dp" />
    <TextView
        android:id="@+id/tv_pot_car_driving"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_pot_car_pic"
        android:text="30km"
        android:textColor="@color/colorGreenPrimary"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_alignParentTop="true"
        android:textSize="@dimen/font_small" />
  <LinearLayout
      android:layout_width="50dp"
      android:orientation="horizontal"
      android:layout_toRightOf="@+id/iv_pot_car_pic"
      android:layout_marginLeft="@dimen/activity_horizontal_margin"
      android:layout_centerVertical="true"
      android:background="@mipmap/icon_electricity"
      android:paddingRight="2dp"
      android:paddingLeft="0.5dp"
      android:paddingBottom="0.5dp"
      android:paddingTop="0.5dp"
      android:layout_height="wrap_content">
      <ProgressBar
          android:id="@+id/progressBar"
          android:layout_width="match_parent"
          android:layout_height="8dp"
          android:indeterminateOnly="false"
          android:max="100"
          android:progress="50"
          android:progressDrawable="@drawable/bg_electricity_progress_horizontal" />
  </LinearLayout>

    <TextView
        android:id="@+id/tv_pot_car_electricity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_pot_car_pic"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:text="正在充电 30%"
        android:padding="1dp"
        android:layout_alignParentBottom="true"
        android:textColor="@color/colorGreenPrimary"
        android:textSize="@dimen/font_tinyer"/>
    <ImageView
        android:id="@+id/iv_to_car_detail"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/icon_right_arrow" />
    <TextView
        android:id="@+id/tv_pot_car_license_number"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/iv_to_car_detail"
        android:layout_marginRight="@dimen/spacing_medium"
        android:text="沪B0123A11"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:textSize="@dimen/font_small" />
    <TextView
        android:id="@+id/tv_pot_car_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/iv_to_car_detail"
        android:layout_marginRight="@dimen/spacing_medium"
        android:text="一汽大众"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:textColor="@color/black"
        android:textSize="@dimen/font_small" />

</RelativeLayout>
