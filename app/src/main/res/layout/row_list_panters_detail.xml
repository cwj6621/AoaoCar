<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:id="@+id/rv_panter_head"
    android:layout_width="match_parent"
    android:background="@color/colorOrangePrimary"
    android:padding="@dimen/activity_horizontal_margin"
    android:layout_height="60dp">
    <TextView
        android:id="@+id/tv_panter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:text="@string/contact_address"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:textSize="@dimen/font_normal" />
    <Button
        android:id="@+id/tv_certify"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="@string/certify"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:background="@drawable/bg_rechage_white_boder"
        android:textSize="@dimen/font_smaller" />
</RelativeLayout>
    <TextView
        android:id="@+id/tv_panters_desc"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/spacing_tinyer"
        android:paddingBottom="@dimen/spacing_tinyer"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:visibility="gone"
        android:textSize="@dimen/font_smaller"/>
</LinearLayout>