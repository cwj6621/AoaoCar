<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/backgroudcolor"
    android:layout_height="match_parent">
<include
    layout="@layout/widget_navigation_title"></include>

 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="150dp">
     <com.jianguo.aoaocar.view.RoundImageView
         android:id="@+id/riv_head"
         android:layout_width="70dp"
         android:layout_height="70dp"
         android:src="@mipmap/icon_user_head"
         android:scaleType="centerCrop"
         android:layout_centerInParent="true"
         app:border_in_width="0dp"
         app:border_out_width="0dp"
         app:border_outcolor="@color/transparent"
         app:border_incolor="@color/transparent" />
 </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:background="@color/white"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl_user_mobile"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/iv_mine_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/icon_mine_phone" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/iv_mine_phone"
                android:layout_marginLeft="@dimen/spacing_tinyer"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/mobile"
                android:textColor="@color/black"
                android:textSize="@dimen/font_smaller" />

            <ImageView
                android:id="@+id/iv_user_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/icon_right_arrow" />

            <TextView
                android:id="@+id/tv_user_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/spacing_tinyer"
                android:layout_toLeftOf="@+id/iv_user_feedback"
                android:textColor="@color/black"
                android:text="132*****6621"
                android:textSize="@dimen/font_smaller" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/backgroudcolor"></View>

        <RelativeLayout
            android:id="@+id/rl_indentify_certification"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/iv_mine_certification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/icon_mine_certification" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/iv_mine_certification"
                android:layout_marginLeft="@dimen/spacing_tinyer"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/indentify_certification"
                android:textColor="@color/black"
                android:textSize="@dimen/font_smaller" />

            <ImageView
                android:id="@+id/iv_indentify_certification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/icon_right_arrow" />

            <TextView
                android:id="@+id/tv_indentify_certification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/spacing_tinyer"
                android:layout_toLeftOf="@+id/iv_indentify_certification"
                android:textColor="@color/colorDeepOrangePrimary"
                android:text="完善资料"
                android:textSize="@dimen/font_smaller" />

        </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rl_enquiries_applay_progress"
            android:layout_width="match_parent"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:background="@color/white"
            android:layout_marginTop="@dimen/button_height_short"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/iv_applay_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/icon_applay_progress"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/iv_applay_progress"
                android:layout_marginLeft="@dimen/spacing_tinyer"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="@string/enquiries_applay_progress"
                android:textColor="@color/black"
                android:textSize="@dimen/font_smaller" />

            <ImageView
                android:id="@+id/lv_arrow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/icon_right_arrow" />

        </RelativeLayout>

</LinearLayout>